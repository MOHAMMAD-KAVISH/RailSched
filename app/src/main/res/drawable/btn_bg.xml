<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed State (Button Clicked) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#0056b3" />  <!-- Darker Shade for Click Effect -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#007bff" />  <!-- Primary Blue Color -->
            <stroke android:width="2dp" android:color="#0056b3" />
            <padding android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp"/>
        </shape>
    </item>

</selector>
